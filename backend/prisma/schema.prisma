datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model blogs {
    id       Int    @id @default(autoincrement())
    ownerUsername String
    title String
    content String
    published Boolean @default(false)
    createdAt       DateTime @default(now())
}

model comments {
    id       Int    @id @default(autoincrement())
    blogId Int
    ownerUsername String
    content String
    createdAt       DateTime @default(now())
}

model users {
    id       Int    @id @default(autoincrement())
    username String @unique
    password String
    admin Boolean @default(false)
}